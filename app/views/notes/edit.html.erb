<h1 class="text-2xl font-bold mb-6">Edit note</h1>

<%= form_with model: [@notable, @note], class: "space-y-4 max-w-lg" do |f| %>
  <div>
    <%= f.text_area :body, rows: 4, autofocus: true,
        class: "w-full rounded-xl border border-stone-200 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-violet-500 focus:border-transparent" %>
  </div>

  <div class="flex items-center gap-3">
    <%= f.submit "Save", class: "bg-violet-600 text-white rounded-xl px-5 py-2.5 text-sm font-medium hover:bg-violet-700 cursor-pointer" %>
    <%= link_to "Cancel", :back, class: "text-sm text-stone-500 hover:text-stone-700" %>
  </div>
<% end %>
