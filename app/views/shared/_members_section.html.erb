<div class="bg-white rounded-2xl border border-stone-200/60 shadow-sm p-5 mb-6">
  <div class="flex items-center justify-between mb-4">
    <h2 class="text-sm font-semibold text-stone-500 uppercase tracking-wide">Members</h2>
  </div>

  <div class="flex flex-wrap items-center gap-3 mb-4">
    <%# Owner %>
    <div class="flex items-center gap-2">
      <%= user_avatar(memberable.user, size: :md) %>
      <div>
        <p class="text-sm font-medium text-stone-800"><%= memberable.user.name %></p>
        <p class="text-xs text-stone-400">Owner</p>
      </div>
    </div>

    <%# Other members %>
    <% memberable.memberships.includes(:user).each do |membership| %>
      <div class="flex items-center gap-2 group">
        <%= user_avatar(membership.user, size: :md) %>
        <div>
          <p class="text-sm font-medium text-stone-800"><%= membership.user.name %></p>
          <p class="text-xs text-stone-400">Member</p>
        </div>
        <%= button_to polymorphic_path([memberable, membership]), method: :delete,
            data: { turbo_confirm: "Remove #{membership.user.name}?" },
            class: "ml-1 text-xs text-stone-300 hover:text-red-500 opacity-0 group-hover:opacity-100 transition-opacity cursor-pointer" do %>
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        <% end %>
      </div>
    <% end %>
  </div>

  <%# Add member form %>
  <%= form_with url: polymorphic_path([memberable, :memberships]), method: :post, class: "flex gap-2" do |f| %>
    <%= f.email_field :email, placeholder: "Add by email address",
        class: "flex-1 rounded-xl border border-stone-200 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-violet-500 focus:border-transparent" %>
    <%= f.submit "Add",
        class: "bg-violet-600 text-white rounded-xl px-4 py-2 text-sm font-medium hover:bg-violet-700 transition-colors cursor-pointer" %>
  <% end %>
</div>
