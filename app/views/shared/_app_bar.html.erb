<nav class="fixed bottom-0 left-0 right-0 bg-white/90 backdrop-blur-sm border-t border-stone-200 z-50">
  <div class="max-w-4xl mx-auto flex items-end justify-around px-6 pt-2 pb-4">

    <%# Today %>
    <%= link_to root_path, class: "flex flex-col items-center gap-1 group relative pb-1" do %>
      <% active = request.path == root_path && params[:date].blank? %>
      <div class="w-6 h-6 flex items-center justify-center">
        <svg class="w-6 h-6 transition-colors <%= active ? 'text-violet-600' : 'text-stone-400 group-hover:text-stone-600' %>" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="<%= active ? '2.5' : '2' %>">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
        </svg>
      </div>
      <span class="text-xs font-medium transition-colors <%= active ? 'text-violet-600' : 'text-stone-400 group-hover:text-stone-600' %>">Today</span>
    <% end %>

    <%# Projects %>
    <%= link_to projects_path, class: "flex flex-col items-center gap-1 group pb-1" do %>
      <% active = request.path.start_with?("/projects") %>
      <div class="w-6 h-6 flex items-center justify-center">
        <svg class="w-6 h-6 transition-colors <%= active ? 'text-violet-600' : 'text-stone-400 group-hover:text-stone-600' %>" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="<%= active ? '2.5' : '2' %>">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
        </svg>
      </div>
      <span class="text-xs font-medium transition-colors <%= active ? 'text-violet-600' : 'text-stone-400 group-hover:text-stone-600' %>">Projects</span>
    <% end %>

    <%# Plus button (center, raised) %>
    <%= link_to new_todo_path(due_date: Date.current), class: "flex flex-col items-center -mt-5" do %>
      <div class="w-14 h-14 rounded-full bg-violet-600 hover:bg-violet-700 transition-colors flex items-center justify-center shadow-lg shadow-violet-200">
        <svg class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4" />
        </svg>
      </div>
      <span class="text-xs font-medium text-stone-400 mt-1">Add</span>
    <% end %>

    <%# Goals %>
    <%= link_to goals_path, class: "flex flex-col items-center gap-1 group pb-1" do %>
      <% active = request.path.start_with?("/goals") %>
      <div class="w-6 h-6 flex items-center justify-center">
        <svg class="w-6 h-6 transition-colors <%= active ? 'text-violet-600' : 'text-stone-400 group-hover:text-stone-600' %>" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="<%= active ? '2.5' : '2' %>">
          <path stroke-linecap="round" stroke-linejoin="round" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
        </svg>
      </div>
      <span class="text-xs font-medium transition-colors <%= active ? 'text-violet-600' : 'text-stone-400 group-hover:text-stone-600' %>">Goals</span>
    <% end %>

    <%# Account %>
    <%= link_to account_path, class: "flex flex-col items-center gap-1 group pb-1" do %>
      <% active = request.path == "/account" %>
      <% if active %>
        <%= user_avatar(current_user, size: :sm) %>
      <% else %>
        <div class="w-6 h-6 flex items-center justify-center">
          <div class="w-6 h-6 rounded-full border-2 border-stone-300 group-hover:border-stone-400 flex items-center justify-center transition-colors">
            <span class="text-xs font-semibold text-stone-400 group-hover:text-stone-600"><%= user_initials(current_user).first %></span>
          </div>
        </div>
      <% end %>
      <span class="text-xs font-medium transition-colors <%= active ? 'text-violet-600' : 'text-stone-400 group-hover:text-stone-600' %>">Account</span>
    <% end %>

  </div>
</nav>
