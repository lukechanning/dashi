<h1 class="text-2xl font-bold text-stone-800 mb-6">Edit todo</h1>
<%= render "form", todo: @todo %>

<div class="mt-6 pt-6 border-t border-stone-200">
  <%= button_to "Delete this todo", todo_path(@todo), method: :delete,
      data: { turbo_confirm: "Are you sure you want to delete this todo?" },
      class: "text-sm text-red-600 hover:text-red-800 cursor-pointer" %>
</div>

<%= render "notes/notes", notable: @todo %>
