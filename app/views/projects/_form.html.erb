<%= form_with model: project, class: "space-y-4" do |f| %>
  <%= render "shared/error_messages", model: project %>

  <div class="flex gap-3">
    <div class="w-20 flex-shrink-0">
      <%= f.label :emoji, "Emoji", class: "block text-sm font-medium text-stone-700 mb-1.5" %>
      <%= f.text_field :emoji, placeholder: "ðŸ“Œ", maxlength: 2,
          class: "w-full rounded-xl border border-stone-200 px-3 py-2 text-center text-xl focus:outline-none focus:ring-2 focus:ring-violet-500 focus:border-transparent" %>
    </div>
    <div class="flex-1">
      <%= f.label :title, class: "block text-sm font-medium text-stone-700 mb-1.5" %>
      <%= f.text_field :title, required: true, autofocus: true,
          class: "w-full rounded-xl border border-stone-200 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-violet-500 focus:border-transparent" %>
    </div>
  </div>

  <div>
    <%= f.label :description, class: "block text-sm font-medium text-stone-700 mb-1.5" %>
    <%= f.text_area :description, rows: 3,
        class: "w-full rounded-xl border border-stone-200 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-violet-500 focus:border-transparent" %>
  </div>

  <div>
    <%= f.label :goal_id, "Goal (optional)", class: "block text-sm font-medium text-stone-700 mb-1.5" %>
    <%= f.collection_select :goal_id, current_user.goals.active.ordered, :id, :title,
        { include_blank: "None (standalone project)" },
        class: "rounded-xl border border-stone-200 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-violet-500" %>
  </div>

  <% if project.persisted? %>
    <div>
      <%= f.label :status, class: "block text-sm font-medium text-stone-700 mb-1.5" %>
      <%= f.select :status, Project.statuses.keys.map { |s| [s.capitalize, s] },
          {}, class: "rounded-xl border border-stone-200 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-violet-500" %>
    </div>
  <% end %>

  <div class="flex items-center gap-3">
    <%= f.submit class: "bg-violet-600 text-white rounded-xl px-5 py-2.5 text-sm font-medium hover:bg-violet-700 cursor-pointer" %>
    <%= link_to "Cancel", project.persisted? ? project_path(project) : projects_path, class: "text-sm text-stone-500 hover:text-stone-700" %>
  </div>
<% end %>
