<h1 class="text-2xl font-bold mb-6">Edit habit</h1>
<%= render "form", habit: @habit %>

<div class="mt-6 pt-6 border-t border-stone-200">
  <%= button_to "Delete this habit", habit_path(@habit), method: :delete,
      data: { turbo_confirm: "Are you sure you want to delete this habit?" },
      class: "text-sm text-red-600 hover:text-red-800 cursor-pointer" %>
</div>
