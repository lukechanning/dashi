<div class="flex items-center gap-3 bg-white rounded-xl border border-stone-200/60 p-4 shadow-sm <%= habit.active? ? '' : 'opacity-50' %>">
  <div class="w-8 h-8 rounded-full bg-violet-100 flex items-center justify-center flex-shrink-0">
    <svg class="w-4 h-4 text-violet-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
    </svg>
  </div>

  <div class="flex-1 min-w-0">
    <span class="font-medium text-stone-800"><%= habit.title %></span>
    <div class="flex items-center gap-2 mt-0.5">
      <span class="text-xs text-stone-500"><%= habit.schedule_description %></span>
      <% if local_assigns.fetch(:show_project, true) && habit.project %>
        <span class="inline-flex items-center text-xs bg-stone-100 text-stone-500 rounded-full px-2 py-0.5"><%= [habit.project.emoji, habit.project.title].compact.join(" ") %></span>
      <% end %>
    </div>
  </div>

  <div class="flex items-center gap-2 flex-shrink-0">
    <%= button_to toggle_active_habit_path(habit), method: :patch, class: "text-xs font-medium px-2.5 py-1 rounded-lg transition-colors cursor-pointer #{habit.active? ? 'text-stone-500 hover:bg-stone-100' : 'text-violet-600 hover:bg-violet-50'}" do %>
      <%= habit.active? ? "Pause" : "Resume" %>
    <% end %>
    <%= link_to "Edit", edit_habit_path(habit), class: "text-xs text-stone-400 hover:text-stone-600 transition-colors" %>
  </div>
</div>
