<div class="min-h-screen flex items-center justify-center">
  <div class="w-full max-w-sm">
    <h1 class="text-2xl font-bold text-center mb-2">Welcome to Dashi</h1>
    <p class="text-center text-gray-500 mb-8">Set up your account to get started.</p>

    <%= form_with url: register_invitation_path(token: @invitation.token), method: :post, class: "space-y-4" do |f| %>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
        <p class="text-gray-900 px-3 py-2 bg-gray-50 rounded-lg border border-gray-200"><%= @invitation.email %></p>
      </div>

      <div>
        <%= f.label "user[name]", "Your name", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field "user[name]", required: true, autofocus: true, placeholder: "Your name",
            class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>

      <%= f.submit "Create account", class: "w-full bg-blue-600 text-white rounded-lg px-4 py-2 font-medium hover:bg-blue-700 cursor-pointer" %>
    <% end %>
  </div>
</div>
