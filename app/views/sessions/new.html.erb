<div class="min-h-screen flex items-center justify-center">
  <div class="w-full max-w-sm">
    <h1 class="text-2xl font-bold text-center mb-8">Sign in to Dashi</h1>

    <% if flash[:notice] %>
      <div class="bg-green-50 border border-green-200 text-green-800 rounded-lg p-4 mb-6">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="bg-red-50 border border-red-200 text-red-800 rounded-lg p-4 mb-6">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= form_with url: session_path, method: :post, class: "space-y-4" do |f| %>
      <div>
        <%= f.label :email, "Email address", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email, required: true, autofocus: true, placeholder: "you@example.com",
            class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>

      <%= f.submit "Send sign-in link", class: "w-full bg-blue-600 text-white rounded-lg px-4 py-2 font-medium hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 cursor-pointer" %>
    <% end %>
  </div>
</div>
