<div class="mb-6">
  <div class="flex items-center justify-between">
    <h1 class="text-2xl font-bold"><%= [@goal.emoji, @goal.title].compact.join(" ") %></h1>
    <div class="flex items-center gap-2">
      <%= link_to "Edit", edit_goal_path(@goal), class: "text-sm text-gray-600 hover:text-gray-900" %>
      <%= button_to "Delete", goal_path(@goal), method: :delete,
          data: { turbo_confirm: "Delete this goal and all its projects?" },
          class: "text-sm text-red-600 hover:text-red-800 cursor-pointer" %>
    </div>
  </div>

  <% if @goal.description.present? %>
    <p class="text-gray-600 mt-2"><%= @goal.description %></p>
  <% end %>

  <div class="flex items-center gap-3 mt-3">
    <span class="text-xs px-2 py-1 rounded-full <%= @goal.active? ? 'bg-green-100 text-green-700' : 'bg-gray-100 text-gray-600' %>">
      <%= @goal.status.capitalize %>
    </span>
  </div>
  <div class="mt-4">
    <%= render "shared/contribution_graph", record: @goal %>
  </div>
</div>

<%# Members section %>
<div class="bg-white rounded-2xl border border-stone-200/60 shadow-sm p-5 mb-6">
  <div class="flex items-center justify-between mb-4">
    <h2 class="text-sm font-semibold text-stone-500 uppercase tracking-wide">Members</h2>
  </div>

  <div class="flex flex-wrap items-center gap-3 mb-4">
    <%# Owner %>
    <div class="flex items-center gap-2">
      <%= user_avatar(@goal.user, size: :md) %>
      <div>
        <p class="text-sm font-medium text-stone-800"><%= @goal.user.name %></p>
        <p class="text-xs text-stone-400">Owner</p>
      </div>
    </div>

    <%# Other members %>
    <% @goal.memberships.includes(:user).each do |membership| %>
      <div class="flex items-center gap-2 group">
        <%= user_avatar(membership.user, size: :md) %>
        <div>
          <p class="text-sm font-medium text-stone-800"><%= membership.user.name %></p>
          <p class="text-xs text-stone-400">Member</p>
        </div>
        <%= button_to goal_membership_path(@goal, membership), method: :delete,
            data: { turbo_confirm: "Remove #{membership.user.name}?" },
            class: "ml-1 text-xs text-stone-300 hover:text-red-500 opacity-0 group-hover:opacity-100 transition-opacity cursor-pointer" do %>
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        <% end %>
      </div>
    <% end %>
  </div>

  <%# Add member form %>
  <%= form_with url: goal_memberships_path(@goal), method: :post, class: "flex gap-2" do |f| %>
    <%= f.email_field :email, placeholder: "Add by email address",
        class: "flex-1 rounded-lg border border-stone-200 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-violet-500 focus:border-transparent" %>
    <%= f.submit "Add",
        class: "bg-violet-600 text-white rounded-lg px-4 py-2 text-sm font-medium hover:bg-violet-700 transition-colors cursor-pointer" %>
  <% end %>
</div>

<div class="flex items-center justify-between mb-4">
  <h2 class="text-lg font-semibold">Projects</h2>
  <%= link_to "New project", new_project_path(goal_id: @goal.id), class: "text-sm text-blue-600 hover:text-blue-800" %>
</div>

<% if @projects.any? %>
  <div class="space-y-3">
    <% @projects.each do |project| %>
      <%= link_to project_path(project), class: "block bg-white rounded-lg border border-gray-200 p-4 hover:border-gray-300 transition" do %>
        <div class="flex items-center justify-between">
          <h3 class="font-medium text-gray-900"><%= [project.emoji, project.title].compact.join(" ") %></h3>
          <div class="flex items-center gap-3">
            <% members = ([project.user] + project.members.to_a).uniq %>
            <% if members.size > 1 %>
              <%= avatar_stack(members, size: :xs, max: 3) %>
            <% end %>
            <%= render "shared/momentum", record: project %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
<% else %>
  <div class="text-center py-8 text-gray-500 text-sm">
    <p>No projects yet.</p>
  </div>
<% end %>

<%= render "notes/notes", notable: @goal %>
