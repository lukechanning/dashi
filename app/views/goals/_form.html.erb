<%= form_with model: goal, class: "space-y-4" do |f| %>
  <% if goal.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-800 rounded-lg p-3 text-sm">
      <% goal.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
      <% end %>
    </div>
  <% end %>

  <div class="flex gap-3">
    <div class="w-20 flex-shrink-0">
      <%= f.label :emoji, "Emoji", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :emoji, placeholder: "ðŸŽ¯", maxlength: 2,
          class: "w-full rounded-lg border border-gray-300 px-3 py-2 text-center text-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    </div>
    <div class="flex-1">
      <%= f.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :title, required: true, autofocus: true,
          class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    </div>
  </div>

  <div>
    <%= f.label :description, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_area :description, rows: 3,
        class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <% if goal.persisted? %>
    <div>
      <%= f.label :status, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.select :status, Goal.statuses.keys.map { |s| [s.capitalize, s] },
          {}, class: "rounded-lg border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  <% end %>

  <div class="flex items-center gap-3">
    <%= f.submit class: "bg-blue-600 text-white rounded-lg px-4 py-2 text-sm font-medium hover:bg-blue-700 cursor-pointer" %>
    <%= link_to "Cancel", goal.persisted? ? goal_path(goal) : goals_path, class: "text-sm text-gray-600 hover:text-gray-900" %>
  </div>
<% end %>
